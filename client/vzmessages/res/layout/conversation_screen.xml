<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" 
    android:background="@drawable/bottom_bar">

    <!-- 1193 due to some repaint issue setting the background of root layout to @drawable/bottom_bar -->
    <fragment
        android:id="@+id/conversationlistfragment"
        android:name="com.verizon.mms.ui.ConversationListFragment"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="@integer/tabletListWeight" />

    <RelativeLayout
        android:id="@+id/conversationlist_divider"
        android:layout_width="@dimen/tabletDividerWidth"
        android:layout_height="fill_parent"
        android:background="@drawable/conversation_background" >
    </RelativeLayout>

    <ViewStub
        android:id="@+id/compose_screen_stub"
		android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="@integer/tabletContentWeight"
		android:layout="@layout/convcompose_fragment" />
</LinearLayout>