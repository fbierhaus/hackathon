<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="wrap_content">

	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal" android:layout_width="fill_parent"
		android:layout_height="@dimen/menuHeight"
		android:id = "@+id/itemContainer"
		android:minWidth="160dp">
		<ImageView android:id="@+id/iv_icon" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:visibility="visible" android:gravity="center_vertical"
			android:src="@drawable/photo_icon" android:layout_marginLeft="4dp"
			android:layout_alignParentLeft="true"
			android:layout_centerVertical="true"/>

		<TextView android:id="@+id/tv_title" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:gravity="center_vertical"
			android:paddingRight="10dip"
			style="?popupMenuItemText"
			android:ellipsize="end"
			android:singleLine="true"
			android:textColor="#000000"
			android:layout_centerVertical="true" android:layout_marginLeft="8dp"
			android:layout_toRightOf="@+id/iv_icon"/>
			
		<TextView android:id="@+id/tv_smileyCharacter" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:gravity="right"
			android:visibility="gone"
			style="?popupMenuItemText"
			android:singleLine="true"
			android:textColor="#000000"
			android:paddingRight="6dip"
			android:layout_centerVertical="true"
			android:layout_alignParentRight="true"/>	
	</RelativeLayout>
	
	<ImageView android:layout_height="1px"
		android:layout_width="fill_parent"
		android:src="@drawable/light_grey_pixel"
		android:scaleType="fitXY"
		android:id="@+id/divider"/>
</LinearLayout>         