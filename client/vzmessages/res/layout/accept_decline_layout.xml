<?xml version="1.0" encoding="utf-8"?>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/provisioning_background" >

        <RelativeLayout
            android:id="@+id/conversation_list_header"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/headerHeight"
            android:layout_alignParentTop="true"
            android:background="@drawable/bg_header1" >

            <ImageView
                android:id="@+id/header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                android:paddingLeft="15dip"
                android:scaleType="fitStart"
                android:src="@drawable/bg_header1_title" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/conversation_list_header"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/tabletImage"
                android:layout_width="270dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/tablet_launcher" />

            <TextView
                android:id="@+id/dialog_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@string/vma_accept_decline_text"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
       
        <LinearLayout
            android:id="@+id/acceptdeclineButton"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@color/grey"
            android:orientation="horizontal"
            android:visibility="visible" >

            <Button
                android:id="@+id/prov_declineButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="16dp"
                android:text="@string/tnc_decline"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="0.5"
                 />

            <Button
                android:id="@+id/prov_acceptButton"
                
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="16dp"
                android:layout_marginRight="5dp"
                android:text="@string/tnc_accept"
                android:layout_weight="0.5" />
        </LinearLayout>
		   <TextView
                android:id="@+id/terms_message"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:textColor="@color/black"
                android:layout_above="@id/acceptdeclineButton"
                android:text="@string/vma_accept_decline_btm_text"
                android:textSize="18dp" />
        <Button
            android:id="@+id/welcomeOKButton"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/btn_settings_height"
            android:layout_alignParentBottom="true"
            android:background="@drawable/remove_btn"
            android:text="@string/yes"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            android:visibility="gone" />
    </RelativeLayout>

