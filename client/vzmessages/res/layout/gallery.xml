<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_main_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    
        <com.verizon.mms.util.EnableDisableViewPager
            android:id="@+id/awesomepager"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

        <RelativeLayout
            android:id="@+id/id_bg_header"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_top_header"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/id_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/desc"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/ico_option" />

            <TextView
                android:id="@+id/id_image_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/id_option"
                android:paddingLeft="10dp"
                android:textColor="@android:color/white"
                android:textSize="18dp" >
            </TextView>

            <TextView
                android:id="@+id/id_image_shared_time"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/id_image_name"
                android:layout_toLeftOf="@id/id_option"
                android:paddingLeft="10dp"
                android:textColor="@android:color/white"
                android:textSize="12dp" >
            </TextView>
        </RelativeLayout>

        <Gallery
            android:id="@+id/id_gallery"
            android:layout_width="fill_parent"
            android:layout_height="104dp"
            android:layout_alignParentBottom="true"
            android:layoutAnimation="@anim/layout_gallery_animation_row"
            android:background="@drawable/bg_bottom"
            android:spacing="7dip" >
        </Gallery>

</RelativeLayout>