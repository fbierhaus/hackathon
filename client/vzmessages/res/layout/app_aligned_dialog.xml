<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/popupbg" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="#000000ff"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="wrap_content"	
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="@dimen/app_alligned_margin"
            android:layout_marginRight="@dimen/app_alligned_margin"
            android:background="@drawable/link_preview_background"
            >

            <RelativeLayout
                android:id="@+id/titleLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
				android:layout_marginTop="12.3dp"
				android:layout_marginRight="18.5dp"
				android:layout_alignLeft="@+id/infoLayout"
                android:layout_alignRight="@+id/infoLayout">

                <ImageView
                    android:id="@+id/title_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="18.5dp"/>

                <TextView
                    android:id="@+id/dialog_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/title_icon"
                    android:layout_marginLeft="18.5dp"
                    android:layout_centerVertical="true"
                    android:textColor="@drawable/text_color_dark_gray"
                    style="?appAlignedDialogTitle"
                    android:textStyle="bold" />
            </RelativeLayout>

            <View
                android:id="@+id/divider"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_alignLeft="@+id/infoLayout"
                android:layout_alignRight="@+id/infoLayout"
                android:layout_below="@+id/titleLayout"
                android:layout_marginTop="6.66dp"
                android:background="@drawable/message_info_divider"
                android:paddingLeft="18.5dp"
                android:paddingRight="18.5dp" />

            <ScrollView
                android:id="@+id/infoLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="@dimen/app_alligned_minwidth"
                android:paddingBottom="@dimen/btn_container_height"
                android:layout_alignWithParentIfMissing="true"
                android:layout_below="@+id/divider" >

                <LinearLayout
                    android:id="@+id/dialog_info_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <com.verizon.mms.ui.widget.JellyBeanSpanFixTextView
                        android:id="@+id/dialog_message"
                        style="?appAlignedDialogMessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18.5dp"
                        android:layout_marginRight="18.5dp"
                        android:layout_marginTop="12.3dp"
                        android:textColor="@drawable/text_color_dark_gray" />

                    <CheckBox
                        android:id="@+id/do_not_ask_again"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18.5dp"
                        android:layout_marginTop="5dp"
                        android:button="@drawable/checkbox"
                        android:paddingLeft="23dip"
                        android:text="@string/do_not_ask_again"
                        android:textColor="@color/black"
                        android:visibility="gone" />

                   <TextView
			            android:id="@+id/showTnc"
            			android:layout_width="wrap_content"
            			android:layout_height="wrap_content"
            			android:autoLink="all"
            			android:text="@string/show_tnc"
            			android:gravity="center"
            			android:layout_marginLeft="18.5dp"
                        android:layout_marginRight="18.5dp"
                        android:layout_marginTop="12.3dp"
            			android:textColor="@color/tnc_highlight"
            			style="?appAlignedDialogMessage"
                        android:visibility="gone"
            		/>    

 				<EditText
                        android:id="@+id/app_aligned_edit"
                        style="?appAlignedDialogMessage"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18.5dp"
                        android:layout_marginRight="18.5dp"
                        android:layout_marginTop="12.3dp"
                        android:minLines="10"
                        android:gravity="top"
                        android:cursorVisible="true"
                        android:fitsSystemWindows="true"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:visibility="gone" />


                </LinearLayout>

            </ScrollView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/btn_container_height"
                android:layout_alignBottom="@+id/infoLayout"
                android:layout_alignLeft="@+id/infoLayout"
                android:layout_alignRight="@+id/infoLayout"
                android:id="@+id/buttonLayout"
                android:background="@drawable/link_preview_background">
                <Button
                    android:id="@+id/negative_button"
                    style="?textButton"
                    android:textAppearance="@style/TextAppearance.Conv.Body"
                    android:layout_marginTop="11dp"
                    android:textSize="15sp"
                	android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_bkgd_message_info"
                    android:visibility="gone" 
                    android:textColor="@color/black"/>
                
                <Button
                    android:id="@+id/positive_button"
                    style="?textButton"
                    android:textAppearance="@style/TextAppearance.Conv.Body"
                    android:layout_marginTop="11dp"
                	android:textSize="15sp"
                	android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_bkgd_message_info"
                    android:textColor="@color/black" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>