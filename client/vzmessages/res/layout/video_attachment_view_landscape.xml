<com.verizon.mms.ui.VideoAttachmentView xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/video_attachment_view_landscape" android:layout_width="match_parent"
	android:layout_height="wrap_content" android:orientation="horizontal"
	android:gravity="center_vertical" android:paddingRight="5dip"
	android:background="@android:color/white">

	<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/allAttachmentBorder">

        <ImageView
            android:id="@+id/video_thumbnail"
            android:scaleType="fitCenter"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/attachImageHeightPort" 
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/btn_play_gallery" />
         <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:paddingRight="10dp"
			android:paddingBottom="10dp"
            android:src="@drawable/close_button_white"
			android:id="@+id/close_button"/>    
    </RelativeLayout>
    
</com.verizon.mms.ui.VideoAttachmentView>
