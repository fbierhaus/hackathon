<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:vzm="http://schemas.android.com/apk/res/com.verizon.messaging.vzmsgs"
    android:id="@+id/group_chooser"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/group_header"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/group_chooser_background"
        android:paddingLeft="8dp"
        android:paddingRight="10.66dp" >

        <LinearLayout
            android:id="@+id/group_show_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" >

            <TextView
                android:id="@+id/recipients_replyTo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:gravity="center_vertical"
                android:text="@string/fill_bubble"
                android:textColor="@color/white"
                android:textSize="19dp" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/group_btn_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true" >

            <ImageView
                android:id="@+id/group_buttons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/group_buttons_group" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignLeft="@id/group_buttons"
                android:layout_alignRight="@id/group_buttons"
                android:baselineAligned="false"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/group_sender_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_weight="1"
                    android:text="@string/off"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <!-- <FrameLayout
                    android:layout_width="12.66dp"
                    android:layout_height="match_parent" /> -->

                <TextView
                    android:id="@+id/group_group_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_weight="1"
                    android:text="@string/on"
                    android:textSize="12dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>