<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_bg" >

    <TextView
        android:id="@+id/txtUrl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:autoLink="web"
        android:textColor="@drawable/url_selector" />

    <RelativeLayout
        android:id="@+id/detailsview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtUrl"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:visibility="gone" >

        <com.verizon.mms.ui.widget.ScaledImageView
            android:id="@+id/imgPreview"
            android:layout_width="50dp"
            android:src="@drawable/default_link1"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="2dip"
            android:layout_marginRight="6dp"
            android:layout_marginTop="10dip"
            android:scaleType="fitStart" />

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="7dip"
            android:layout_toRightOf="@id/imgPreview"
            android:textColor="#000000"
            android:textSize="22dp" />
        
        <TextView
            android:id="@+id/txtUrlInside"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtTitle"
            android:layout_toRightOf="@id/imgPreview"
            android:autoLink="web"
            android:textColor="@drawable/url_selector" />

        <TextView
            android:id="@+id/txtDesc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/txtUrlInside"
            android:layout_below="@id/txtUrlInside"
            android:layout_marginTop="7dip"
            android:maxLines="4"
            android:textColor="@android:color/darker_gray" />

		<LinearLayout android:id="@+id/viewFailed"
		    android:layout_below="@id/txtDesc"
		    android:layout_alignLeft="@id/txtDesc"
	    	android:layout_width="match_parent" android:layout_height="wrap_content"
	    	android:visibility="gone">
			<ImageView
			    android:layout_marginRight="4dp"
			    android:layout_width="@dimen/linkPreviewFailedIconSize"
			    android:layout_height="@dimen/linkPreviewFailedIconSize"
		    	android:contentDescription="@string/error"
		    	android:src="@drawable/ico_error"
		    	android:layout_gravity="center_vertical"/>		    
		   	<TextView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			  	android:layout_gravity="center_vertical"
			  	android:textColor="@android:color/darker_gray"
			  	android:textSize="13dp"
				android:text="@string/cannot_fetch_link_preview"/>
			<ImageView android:id="@+id/btnRefresh"
			    android:layout_marginLeft="4dp"
			    android:layout_width="@dimen/linkPreviewFailedIconSize"
			    android:layout_height="@dimen/linkPreviewFailedIconSize"
		    	android:contentDescription="@string/reload"
		    	android:src="@drawable/ico_refresh"
		    	android:layout_gravity="center_vertical"/>		    
		</LinearLayout>    
        
        <ImageView
            android:id="@+id/messagebubbleicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/viewFailed"
            android:layout_below="@id/viewFailed"
            android:layout_marginTop="9dip"
            android:contentDescription="@string/desc"
            android:paddingBottom="7dip"
            android:src="@drawable/ico_message" />

        <TextView
            android:id="@+id/lastmessagesender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/viewFailed"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/messagebubbleicon"
            android:textColor="@android:color/darker_gray"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/txtTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/viewFailed"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/lastmessagesender"
            android:textColor="@android:color/darker_gray"
            android:textSize="13dp" />
    </RelativeLayout>
    
    <LinearLayout
        android:id="@+id/viewLoading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtUrl"
        android:layout_gravity="center"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingBottom="6dp"
        android:visibility="gone" >

        <ProgressBar
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            android:indeterminate="true"
            android:indeterminateOnly="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="@string/loading"
            android:textColor="@android:color/black"
            android:textSize="18dp"
            android:textStyle="bold" />
    </LinearLayout>    

</RelativeLayout>