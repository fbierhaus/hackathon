<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/popupbg" >

   <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#d5d9de"
        android:orientation="vertical" >
        
        <TextView
                android:id="@+id/dialog_header"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/headerHeight"
                android:gravity="center"
                android:background="@drawable/sharecontentheader"
                android:textAppearance="@style/TextAppearance.ConvList.Dialog"
                android:textSize="20sp"
                android:textStyle="bold" />
        <LinearLayout
                android:id="@+id/editLayout"
                android:layout_width="fill_parent"
                android:layout_height="0dip"
               android:layout_weight="0.5" 
                android:minHeight="20dp" >

                <EditText
                    android:id="@+id/enterData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:maxLength="@string/auto_reply_msg_limit"
                    />

                <com.verizon.mms.ui.widget.ImageViewButton
                    android:id="@+id/composebutton"
                    android:layout_width="43dp"
                    android:layout_height="36dp"
                    android:scaleType="center" />
            </LinearLayout>
           
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#d5d9de"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/enter_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:paddingBottom="2dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/maxlimitcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingBottom="2dp"
                android:paddingRight="10dp"
                android:textColor="@color/black" />
        </RelativeLayout>
			<LinearLayout
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content">	
	                <Button
	                    android:id="@+id/positive_button"
	                    android:layout_width="wrap_content"
	                    android:layout_height="@dimen/convListItemHeight"
	                    android:layout_weight="1"
	                    android:background="@drawable/btn_bkgd_message_info"
	                    android:gravity="center"
	                    android:text="@string/save"
	                    android:textAppearance="@style/TextAppearance.ConvList.Dialog" />
	
	                <Button
	                    android:id="@+id/negative_button"
	                    android:layout_width="wrap_content"
	                    android:layout_height="@dimen/convListItemHeight"
	                    android:layout_weight="1"
	                    android:background="@drawable/btn_bkgd_message_info"
	                    android:gravity="center"
	                    android:text="@string/cancel"
	                    android:textAppearance="@style/TextAppearance.ConvList.Dialog" />
	            </LinearLayout>
	       
    </LinearLayout>

</RelativeLayout>




           
           
        