<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/widget_item"
	android:layout_width="fill_parent" android:layout_height="fill_parent">
	<ImageButton 
		android:id="@+id/widget_shortcut_image"
		android:layout_centerHorizontal="true"
		android:layout_alignParentTop="true"
		android:layout_marginTop="9dp"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:background="@drawable/widget_selector" />
	<Button android:id="@+id/unreadMessagesCount"
		android:background="@drawable/ic_badgecounter_large"
		android:layout_marginLeft="6dp"
		android:layout_width="25dp" 
		android:layout_height="25dp"
		android:gravity="center"
		android:textSize="10dp"
		android:textStyle="bold"
		android:visibility="invisible"
		android:textColor="@color/white"/>
	<TextView
		android:gravity="center"
        android:id="@+id/widgetLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/widget_shortcut_image"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="8dp"
        android:textSize="14dp"
        android:text="@string/app_name"
        android:ellipsize="marquee"
        android:textColor="@color/white"/>
</RelativeLayout>