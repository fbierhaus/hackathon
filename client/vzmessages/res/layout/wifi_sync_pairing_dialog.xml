<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000ff"
    android:id="@+id/dialogLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="#000000ff"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="@dimen/app_alligned_margin"
            android:layout_marginRight="@dimen/app_alligned_margin"
            android:background="@drawable/link_preview_background"
            >

            <RelativeLayout
                android:id="@+id/titleLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12.3dp" >

              
                <TextView
                    android:id="@+id/wifi_dialog_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="@string/start_wifi_sync"
                    android:textColor="@drawable/text_color_dark_gray"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <View
                android:id="@+id/divider"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_alignLeft="@+id/infoLayout"
                android:layout_alignRight="@+id/infoLayout"
                android:layout_below="@+id/titleLayout"
                android:layout_marginTop="6.66dp"
                android:background="@drawable/message_info_divider"
                android:paddingLeft="18.5dp"
                android:paddingRight="18.5dp" />

            <RelativeLayout
                android:id="@+id/infoLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignWithParentIfMissing="true"
                android:layout_below="@+id/divider"
                android:layout_centerInParent="true"
                android:minWidth="@dimen/app_alligned_minwidth"
                android:paddingBottom="@dimen/btn_container_height" >
                 <TextView
                        android:id="@+id/wifi_dialog_message"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/titleLayout"
                        android:autoLink="web"
                        android:layout_marginLeft="18.5dp"
                        android:layout_marginRight="18.5dp"
                        android:layout_marginTop="12.3dp"
                        android:textColor="@drawable/text_color_dark_gray"
                        android:textSize="17.784dp" />
                <LinearLayout
                    android:id="@+id/wifi_sync_handset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/titleLayout"
                   
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textSize="17dp"
                        android:text="@string/wifi_action_dlg_handset_txt"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="6dp"
                        android:textColor="#000000" />
                    
                      <TextView
                        android:id="@+id/showKey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="7dp"
                        android:textColor="#FF0000"
                        android:textSize="22dp" />
                  
                </LinearLayout>
                <ScrollView 
                    android:id="@+id/wifi_tablet_scrollview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:visibility="gone">
                <LinearLayout
                    android:id="@+id/wifi_sync_tablet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/titleLayout"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"
                    android:visibility="visible" >

                    <TextView
                        android:id="@+id/wifi_sync_pair_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="6dp"
                        
                        android:textSize="17dp"
                        android:text="@string/wifi_action_dlg_tablet_txt"
                        android:textColor="#000000" />
                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:textColor="@color/black"
                        android:text="@string/wifi_tablet_pairing_title"
                        android:layout_gravity="center"/>
                    <EditText
                        android:id="@+id/wifi_sync_request_pinbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                         android:layout_gravity="center"
                        android:layout_marginTop="7dp"
                        android:ems="12"
                        android:hint="@string/wifi_tablet_pairing_hinttxt"
                        android:inputType="phone" />
                </LinearLayout>
                </ScrollView>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/btn_container_height"
                android:layout_alignBottom="@+id/infoLayout"
                android:layout_alignLeft="@+id/infoLayout"
                android:layout_alignRight="@+id/infoLayout"
                android:background="@drawable/link_preview_background" >

                <Button
                    android:id="@+id/wifi_pos_button"
                    android:textSize="16.67dp"
                    style="@style/TextAppearance.Conv.Body"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="11dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_bkgd_message_info"
                    android:onClick="onViewClick" />

                <Button
                    android:id="@+id/wifi_neg_button"
                    android:textSize="16.67dp"
                    style="@style/TextAppearance.Conv.Body"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="11dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_bkgd_message_info"
                    android:visibility="gone"
                    android:onClick="onViewClick"  />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>