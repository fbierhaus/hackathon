<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/mms_view"
	android:layout_width="wrap_content"
	android:layout_height="match_parent"
	android:layout_gravity="center" >

	<ImageView
		android:id="@+id/image_view"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:adjustViewBounds="true"
		android:maxHeight="135.16dip"
		android:scaleType="fitXY"
		android:visibility="gone" />

<!-- 	<ImageView
		android:id="@+id/play_slideshow_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true"
		android:src="@drawable/btn_play_gallery"
		android:scaleType="centerInside"
		android:padding="15dp"
		android:visibility="gone" /> -->

	<LinearLayout
		android:id="@+id/vcardView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:visibility="gone" >

		<ImageView
			android:id="@+id/contactPicture"
			android:layout_width="68dip"
			android:layout_height="60dip"
			android:layout_gravity="left"
			android:layout_marginLeft="2dp"
			android:layout_marginRight="2dp"
			android:adjustViewBounds="true"
			android:paddingBottom="5dip"
			android:paddingLeft="5dip"
			android:paddingRight="5dip"
			android:paddingTop="5dip"
			android:src="@drawable/list_namecard" />

		<TextView
			android:id="@+id/contactText"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:maxWidth="@dimen/vcard_text_width"
			android:paddingBottom="2dip"
			android:paddingRight="5dip"
			android:paddingTop="2dip"
			android:textAppearance="@style/TextAppearance.Conv.VCardBody" />

	</LinearLayout>
	
	<LinearLayout
		android:id="@+id/locationView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:visibility="gone"
		android:orientation="vertical">

		<ImageView
			android:id="@+id/locationPicture"
			android:layout_width="100dip"
			android:layout_height="60dip"
			android:layout_gravity="center"	
			android:scaleType="centerInside"
			android:layout_marginLeft="2dp"
			android:layout_marginRight="2dp"
			android:adjustViewBounds="true"
			android:src="@drawable/btn_center_map" />

		<TextView
			android:id="@+id/locationText"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingBottom="2dip"
			android:paddingLeft="5dip"
			android:paddingRight="5dip"
			android:paddingTop="2dip"
			android:maxWidth="@dimen/vcard_text_width"
			android:layout_gravity="center"
			android:textSize="16.67dp"
			android:textAppearance="@style/TextAppearance.Conv.Body" />

	</LinearLayout>

</RelativeLayout>