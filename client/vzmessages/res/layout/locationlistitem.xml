<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/list_bg_with_divider">
    
    <ImageView android:id="@+id/icon"
        android:src="@drawable/default_location1"
        android:contentDescription="@string/desc"
		android:layout_alignParentTop="true"
		android:layout_marginTop="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="9dp"
        android:layout_height="60dip"
        android:layout_width="60dip"/>
    <TextView android:id="@+id/addresstitle"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/icon"
        android:layout_alignParentTop="true"
        android:layout_marginTop="3dip"
        style="?locationAddressTitle"
        android:textColor="#515151"/>
    <TextView android:id="@+id/subtitle1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/addresstitle"
        android:layout_toRightOf="@id/icon"
        android:visibility="gone"
        style="?sendButtonText"
        android:textColor="#515151"/>
    <TextView android:id="@+id/subtitle2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_below="@id/subtitle1"
        android:layout_toRightOf="@id/icon"
        android:layout_marginTop="1dip"
        style="?sendButtonText"
        android:textColor="#515151"/>
    <TextView android:id="@+id/lastmessage"
        android:layout_below="@id/addresstitle"
        android:layout_alignLeft="@id/addresstitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#515151"
        style="?groupRecipReply"/>
    <ImageView android:id="@+id/messagebubbleicon"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/subtitle2"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@id/lastmessage"
        android:src="@drawable/ico_message"
        android:contentDescription="@string/desc"/>
    <TextView android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="5dp"
        android:paddingBottom="5dp"
        android:textColor="#515151"
        style="?groupRecipReply"/>
    <TextView
        android:id="@+id/lastmessagesender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/date"
        android:layout_below="@id/subtitle2"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="6dp"
        android:paddingBottom="5dp"
        android:layout_toRightOf="@id/messagebubbleicon"
        android:textColor="#515151"
        style="?groupRecipReply" />


</RelativeLayout>