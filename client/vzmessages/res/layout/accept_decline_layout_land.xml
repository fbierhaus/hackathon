<?xml version="1.0" encoding="utf-8"?>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/provisioning_background" >

        <RelativeLayout
            android:id="@+id/conversation_list_header"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/headerHeight"
            android:layout_alignParentTop="true"
            android:background="@drawable/bg_header1" >

            <ImageView
                android:id="@+id/header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                android:paddingLeft="15dip"
                android:scaleType="fitStart"
                android:src="@drawable/bg_header1_title" />
        </RelativeLayout>

            <TextView
                android:id="@+id/dialog_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/terms_message"
                android:textColor="@color/black"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/tabletImage"
                android:paddingTop="10dp"
                android:text="@string/vma_accept_decline_text"
                android:textSize="18sp"
                android:textStyle="bold" />
        
       
        <LinearLayout
            android:id="@+id/acceptdeclineButton"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@color/grey"
            android:orientation="horizontal"
            android:visibility="visible" >
            <TextView    android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"></TextView>
            <Button
                android:id="@+id/prov_declineButton"
				android:text="@string/tnc_decline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="16dp"
                android:layout_marginRight="8dp"
                android:layout_weight="0.15"
                 />

            <Button
                android:id="@+id/prov_acceptButton"            
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="16dp"
                android:layout_marginRight="2dp"
                android:text="@string/tnc_accept"
                android:layout_weight="0.15" />
        </LinearLayout>
		   <TextView
                android:id="@+id/terms_message"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="20dp"
                android:textColor="@color/black"
                android:layout_above="@id/acceptdeclineButton"
                android:text="@string/vma_accept_decline_btm_text"
                android:textSize="16dp" />
        <Button
            android:id="@+id/welcomeOKButton"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/btn_settings_height"
            android:layout_alignParentBottom="true"
            android:background="@drawable/remove_btn"
            android:text="@string/yes"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/tabletImage"
            android:layout_width="264dp"
            android:layout_height="147dp"
            android:layout_below="@+id/conversation_list_header"
            android:layout_toLeftOf="@+id/terms_message"
            android:background="@drawable/tablet_launcher"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp" />

    </RelativeLayout>

