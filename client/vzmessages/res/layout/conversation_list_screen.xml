<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:id="@+id/parentViewConv"
	>

	<RelativeLayout android:id="@+id/conversation_list_header"
		android:layout_width="fill_parent" android:layout_height="@dimen/headerHeight" android:background="@drawable/bg_header1"
		android:layout_alignParentTop="true">

	    <ImageView
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitStart"
            android:paddingLeft="15dip"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/bg_header1_title"/>
	    
		<RelativeLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignWithParentIfMissing="true"
			android:layout_centerVertical="true"
			android:layout_alignParentRight="true"
			android:orientation="horizontal" >
					
		    <ProgressBar android:id="@+id/sync_progressBar"
			android:layout_width="25dip" android:layout_height="25dip"
			android:layout_centerVertical="true"
			android:visibility="gone" android:layout_marginRight="5dp"
			android:layout_alignWithParentIfMissing="true" />
		    <com.verizon.mms.ui.widget.ImageViewButton
				android:id="@+id/sync_idle"
				android:layout_width="31dp"
				android:layout_height="fill_parent"
				android:layout_centerVertical="true"
				android:scaleType="centerInside"
				android:src="@drawable/sync_network_error"
				android:layout_marginRight="5dp"
			    android:layout_toRightOf="@+id/sync_progressBar"
				android:visibility="gone" />
			<com.verizon.mms.ui.widget.ImageViewButton
				android:id="@+id/imgGallery"
				android:layout_width="31dp"
				android:layout_height="fill_parent"
				android:layout_centerVertical="true"
				android:scaleType="centerInside"
				android:src="@drawable/ico_gallery"
			    android:layout_toRightOf="@+id/sync_idle"
				android:visibility="gone" />
			
			<com.verizon.mms.ui.widget.ImageViewButton android:id="@+id/composebutton"
				android:layout_width="43dp" android:src="@drawable/ico_compose"
				android:layout_height="36dp" android:layout_centerVertical="true"
				android:layout_toRightOf="@+id/imgGallery"
				android:scaleType="centerInside"/>
		
		</RelativeLayout>
		
		<!-- <ImageView android:id="@+id/bar_seperator" android:src="@drawable/header_vertical_separator2"
			android:layout_centerVertical="true" android:layout_marginRight="1dip"
			android:layout_marginLeft="1dip" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_toLeftOf="@id/composebutton"
			android:contentDescription="@string/desc" /> -->
 
		<!-- <ImageView android:id="@+id/addcontact" android:src="@drawable/ico_available_contacts"
			android:layout_width="43dp" android:layout_height="36dp"
			android:layout_toLeftOf="@id/bar_seperator"
			android:scaleType="centerInside"
			android:layout_centerVertical="true"/> -->

		<ImageView
		    android:id="@+id/imgAutoFwdReply"
		    android:layout_width="wrap_content"
		    android:layout_height="fill_parent"
		    android:layout_alignParentTop="true"
		    android:layout_toRightOf="@+id/header"
		    android:scaleType="centerInside"
		    android:src="@drawable/ico_setting_auto_forward" />

	</RelativeLayout>

	<LinearLayout
	    android:id="@+id/replyfwdStatus"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/conversation_list_header"
	    android:orientation="horizontal" >

	    <LinearLayout
	        android:id="@+id/replyStatus"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="0.5"
	        android:background="@drawable/btn_bg_yellow"
	        android:orientation="horizontal" >

	        <ImageView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center"
	            android:paddingLeft="4dip"
	            android:src="@drawable/ico_auto_reply" />

	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center"
	            android:paddingLeft="5dp"
	            android:text="@string/is_reply"
	            android:textColor="@color/black"
	            android:textSize="15sp" />
	    </LinearLayout>
	</LinearLayout>

<ListView android:id="@android:id/list"
		style="?android:attr/listViewWhiteStyle"
		android:layout_width="match_parent" android:layout_height="match_parent"
		android:drawSelectorOnTop="false" android:scrollbarStyle="insideOverlay"
		android:background="@android:color/white" android:cacheColorHint="@android:color/white"
		android:fadingEdgeLength="16dip" 
		android:layout_below="@+id/replyfwdStatus"
		android:layout_above="@+id/bottom_panel"/>
		
	<RelativeLayout android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/bottom_panel" android:visibility="visible"
		android:background="@drawable/bottom_bar"
		android:layout_alignParentBottom="true"
		android:paddingTop="8dp"
		android:paddingBottom="8dp"
		android:gravity="center_horizontal">
		<Button android:layout_width="130dp"
			android:layout_height="42.18dp"
			style="?textButton"
			android:id="@+id/selectAll"
			android:text="@string/select_all"
			android:background="@drawable/btn_bkgd_gray"
			android:textColor="@color/black"
			android:layout_toLeftOf="@+id/performAction"
			android:layout_marginLeft="2dp"/> 
			
		<Button android:layout_width="130dp"
			android:layout_height="42.18dp"
			style="?textButton"
			android:layout_alignRight="@+id/selectAll"
			android:layout_toLeftOf="@+id/performAction"
			android:id="@+id/unSelectAll"
			android:visibility="gone"
			android:text="@string/unselect_all"
			android:background="@drawable/btn_bkgd_gray"
			android:textColor="@color/black"
			android:layout_marginLeft="2dp"/>
		
		<Button android:layout_width="130dp"
			android:layout_height="42.18dp"
			android:layout_centerVertical="true"
			style="?textButton"
			android:id="@+id/performAction"
			android:text="Delete"
			android:background="@drawable/btn_bkgd_gray"
			android:textColor="@color/black"
			android:layout_marginLeft="16dp"/>
		</RelativeLayout>
</RelativeLayout>