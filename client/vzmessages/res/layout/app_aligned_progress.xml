<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/popupbg" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="#000000ff"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="@dimen/app_alligned_margin"
            android:layout_marginRight="@dimen/app_alligned_margin"
            android:background="@drawable/link_preview_background"
            >

            <RelativeLayout
                android:id="@+id/titleLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
				android:layout_marginTop="12.3dp"
				android:layout_marginRight="18.5dp"
				android:layout_alignLeft="@+id/infoLayout"
                android:layout_alignRight="@+id/infoLayout">

                <ImageView
                    android:id="@+id/title_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="18.5dp"/>

                <TextView
                    android:id="@+id/dialog_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/title_icon"
                    android:layout_marginLeft="18.5dp"
                    android:layout_centerVertical="true"
                    android:textColor="@drawable/text_color_dark_gray"
                    style="?appAlignedDialogTitle"
                    android:textStyle="bold" />
            </RelativeLayout>

            <View
                android:id="@+id/divider"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_alignLeft="@+id/infoLayout"
                android:layout_alignRight="@+id/infoLayout"
                android:layout_below="@+id/titleLayout"
                android:layout_marginTop="6.66dp"
                android:background="@drawable/message_info_divider"
                android:paddingLeft="18.5dp"
                android:paddingRight="18.5dp" />

                <LinearLayout
                    android:id="@+id/dialog_info_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" 
                    android:paddingBottom="20dp"
                    android:minWidth="@dimen/app_alligned_minwidth"
                	android:layout_alignWithParentIfMissing="true"
                	android:layout_below="@+id/divider" >
					<ProgressBar android:id="@+id/progress"
            			android:background = "@xml/progress_bar_style"
            			android:layout_width="wrap_content"
            			android:layout_height="wrap_content"
            			android:layout_gravity="center_vertical"
            			android:layout_marginLeft="18.5dp"
                        android:layout_marginBottom="5dp"
                		android:layout_marginRight="7dp" 
                    	android:layout_marginTop="12.3dp"/>
                    	<TextView
                        android:id="@+id/dialog_message"
                        android:layout_width="match_parent"
            			android:layout_height="wrap_content"
            			android:layout_gravity="center_vertical"
                        android:autoLink="web"
                        android:padding="5dp"
                        android:layout_marginTop="12.3dp"
                        android:textColor="@drawable/text_color_dark_gray"
                        style="?appAlignedDialogMessage" />
                </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>