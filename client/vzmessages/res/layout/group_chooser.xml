<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:vzm="http://schemas.android.com/apk/res/com.verizon.messaging.vzmsgs"
	android:id="@+id/group_chooser"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	>

	<RelativeLayout
		android:id="@+id/group_header"
		android:layout_width="match_parent"
		android:layout_height="40dp"
		android:background="@drawable/group_chooser_background"
		android:paddingLeft="8dp"
		android:paddingRight="10.66dp" >
		
		<LinearLayout android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_centerVertical="true"
			android:id="@+id/group_show_dialog">
		   <TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/recipients_reply"
			android:id="@+id/recipients_replyTo"
			android:layout_marginRight="5dp"
			style="?groupRecipReply"
			android:textColor="@color/white"
			android:gravity="center_vertical"					
			android:layout_gravity="center_vertical"/>	
		   <ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"			
			android:src="@drawable/group_change" 
			android:layout_gravity="center_vertical"/>
		</LinearLayout>
		<RelativeLayout
		    android:id="@+id/group_btn_layout"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_alignParentRight="true" >

			<ImageView
				android:id="@+id/group_buttons"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:src="@drawable/group_buttons_group" />

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_alignRight="@id/group_buttons"
				android:layout_alignLeft="@id/group_buttons"
				android:baselineAligned="false"
				android:orientation="horizontal" >

				<TextView
					android:id="@+id/group_sender_btn"
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:paddingTop="10dp"
					android:paddingLeft="5dp"
					android:textSize="12dp"
					android:layout_gravity="center_vertical"
					android:textStyle="bold"
					android:layout_weight="1"
					android:text="@string/just_me"/>

				<FrameLayout
					android:layout_width="12.66dp"
					android:layout_height="match_parent"
					/>

				<TextView
					android:id="@+id/group_group_btn"
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_weight="1" 
					android:paddingTop="10dp"
					android:paddingLeft="5dp"
					android:textSize="12dp"
					android:layout_gravity="center_vertical"
					android:textStyle="bold"
					android:text="@string/group"/>

			</LinearLayout>

		</RelativeLayout>

	</RelativeLayout>

	<!-- drop-down dialog -->

	<LinearLayout
		android:id="@+id/group_dialog"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="21dp"
		android:layout_marginRight="21dp"
		android:layout_below="@id/group_header"
		android:layout_centerInParent="true"
		android:orientation="vertical"
		android:background="@drawable/group_dialog_bkgd"
		android:visibility="gone"
		>
	
		<ScrollView
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:paddingTop="12dp"
			android:paddingBottom="12dp"
			>
	
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical" >
	
				<com.verizon.mms.ui.widget.MultilineCheckedTextView
					android:id="@+id/group_dialog_group"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:paddingLeft="56dp"
					android:paddingRight="8dp"
					android:gravity="top"
					style="?groupPromptText"
					android:textAppearance="@style/TextAppearance.Conv.GroupPromptText"
					android:lineSpacingMultiplier="1.05"
					android:text="@string/group_prompt_group_desc"
					vzm:checkMark="?android:attr/listChoiceIndicatorSingle"
					/>
					
				<ImageView
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="7dp"
					android:layout_marginBottom="7dp"
					android:scaleType="fitXY"
					android:src="@drawable/divider_horizontal_dark_opaque"
					/>
	
				<com.verizon.mms.ui.widget.MultilineCheckedTextView
					android:id="@+id/group_dialog_sender"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:paddingLeft="56dp"
					android:paddingRight="8dp"
					android:gravity="top"
					style="?groupPromptText"
					android:textAppearance="@style/TextAppearance.Conv.GroupPromptText"
					android:lineSpacingMultiplier="1.05"
					android:text="@string/group_prompt_sender_desc"
					vzm:checkMark="?android:attr/listChoiceIndicatorSingle"
					/>
			</LinearLayout>
	
		</ScrollView>
	
		<ImageView
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="10dp"
			android:scaleType="fitXY"
			android:src="@drawable/divider_horizontal_dark_opaque"
			/>
	
		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="14dp"
			android:layout_marginRight="13dp"
			android:gravity="left"
			style="?groupPromptDisclaimer"
			android:textAppearance="@style/TextAppearance.Conv.GroupPromptDisclaimer"
			android:text="@string/group_prompt_disclaimer"
			android:id="@+id/disclaimer"
			/>
	
		<Button
			android:id="@+id/group_dialog_close"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="10dp"
			android:gravity="center"
			android:text="@string/close"
			style="?textButton"
			/>
	
	</LinearLayout>

	<ImageView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/group_header"
		android:src="@drawable/group_chooser_shadow"
		android:scaleType="fitXY"
		/>

</RelativeLayout>