<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/textLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/mms_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:visibility="gone" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

           
    	<com.verizon.mms.ui.widget.ImageViewCorrected
			android:id="@+id/image_view"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:adjustViewBounds="true"
            android:visibility="gone"
			android:layout_centerInParent="true" />
            
            <ImageView
                android:id="@+id/playBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:padding="15dp"
			    android:scaleType="centerInside"
                android:src="@drawable/btn_play_gallery"
                android:visibility="gone" />
        

			<ProgressBar
			    android:id="@+id/progress"
			    style="?android:attr/progressBarStyleSmallInverse"
			    android:visibility="gone"
				android:layout_centerInParent="true"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/vcardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/contactPicture"
                android:layout_width="68dip"
                android:layout_height="60dip"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:adjustViewBounds="true"
                android:paddingBottom="5dip"
                android:paddingLeft="5dip"
                android:paddingRight="5dip"
                android:paddingTop="5dip" />

            <TextView
                android:id="@+id/contactText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingBottom="2dip"
                android:paddingRight="5dip"
                android:paddingTop="2dip"
                android:textColor="#000000"/>
        </LinearLayout>
    </RelativeLayout>

    <com.verizon.mms.ui.widget.JellyBeanSpanFixTextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="all"
        android:linksClickable="false"
        android:layout_gravity="left"
        android:maxWidth="@dimen/maxTextMessageWidth"
        android:minWidth="@dimen/minTextMessageWidth"
        android:textAppearance="@style/TextAppearance.Conv.Body"
        android:layout_marginBottom="@dimen/messageBottomBorder"
		android:layout_marginLeft="@dimen/messageLeftRightBorder"
		android:layout_marginRight="@dimen/messageLeftRightBorder"
		android:layout_marginTop="@dimen/messageTopBorder"
        android:visibility="gone" 
        style="?messageEditorText"/>
   

</LinearLayout>