<com.verizon.mms.ui.VcardAttachmentView
	xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/vcard_attachment_view_landscape"
	android:layout_width="match_parent" android:layout_height="wrap_content"
	android:orientation="horizontal" android:gravity="center_vertical"
	android:paddingRight="5dip" android:background="@android:color/white">

	<RelativeLayout android:layout_width="match_parent"
		android:layout_height="wrap_content" android:orientation="vertical"
		android:layout_weight="1"
		android:layout_marginLeft="10dp"
		android:layout_marginTop="10dp"
		android:layout_marginRight="10dp"
		android:layout_marginBottom="10dp"
		android:background="@color/text_color_list_selected">

		<ImageView android:id="@+id/contactPicture"
     		android:layout_width="68dip"
			android:layout_height="60dip"
     		android:src="@drawable/list_namecard"
     		android:adjustViewBounds="true"
     		android:paddingTop="5dip" android:paddingBottom="5dip"
			android:paddingLeft="5dip" android:paddingRight="5dip"
     		android:layout_centerHorizontal="true"
     		android:layout_marginRight="2dp"/>
     		
     	<TextView android:id="@+id/contactText"
     		android:layout_width="wrap_content"
     		android:layout_height="wrap_content"
     		android:paddingTop="2dip" android:paddingBottom="2dip"
			android:paddingLeft="2dip" android:paddingRight="2dip"
     		android:maxWidth="@dimen/vcard_text_width"
     		android:textAppearance="@style/TextAppearance.Conv.VCardBody"
     		android:layout_below="@+id/contactPicture"
     		android:layout_alignLeft="@+id/contactPicture"/>/>
		<ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/close_button_white"
			android:id="@+id/close_button"/> 	
	</RelativeLayout>
</com.verizon.mms.ui.VcardAttachmentView>
